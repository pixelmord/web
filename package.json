{
  "name": "zoonk",
  "version": "0.1.0",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "analyze": "ANALYZE=true next build",
    "build": "next build",
    "deploy:now": "yarn now --prod --scope=zoonk",
    "deploy:firebase": "yarn firebase deploy",
    "deploy:firestore": "yarn firebase deploy --only firestore",
    "deploy:functions": "yarn firebase deploy --only functions",
    "dev": "next dev",
    "eslint": "eslint",
    "firebase": "firebase",
    "lint": "yarn eslint './**/*.{js,jsx,ts,tsx}'",
    "now": "now",
    "prettier": "prettier",
    "start": "next start",
    "start:firestore": "firebase emulators:exec --only firestore",
    "test": "FIRESTORE_EMULATOR_HOST=localhost:8080 yarn start:firestore 'jest'",
    "test:coverage": "yarn start:firestore 'jest --coverage'",
    "test:watch": "yarn start:firestore 'jest --watch'",
    "tsc": "tsc"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.7",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.46",
    "algoliasearch": "^4.0.3",
    "diff": "^4.0.2",
    "firebase": "^7.10.0",
    "isomorphic-unfetch": "^3.0.0",
    "lodash": "^4.17.15",
    "next": "^9.3.5",
    "next-offline": "^5.0.0",
    "react": "^16.13.1",
    "react-dnd": "^10.0.2",
    "react-dnd-html5-backend": "^10.0.2",
    "react-dom": "^16.13.1",
    "react-markdown": "^4.3.1",
    "remark-shortcodes": "^0.3.1"
  },
  "devDependencies": {
    "@firebase/testing": "^0.16.14",
    "@next/bundle-analyzer": "^9.2.1",
    "@types/diff": "^4.0.2",
    "@types/jest": "^25.1.3",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.7.7",
    "@types/react": "^16.9.26",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "firebase-tools": "^7.15.1",
    "husky": ">=1",
    "jest": "^25.1.0",
    "lint-staged": ">=8",
    "now": "^18.0.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "typescript": "^3.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx}": [
      "yarn eslint --fix"
    ]
  }
}
